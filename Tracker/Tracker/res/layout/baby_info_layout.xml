<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7f7"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleBar"
        layout="@layout/root_layout" />
    <!-- head image -->

    <LinearLayout
        android:id="@+id/head_image_view"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_below="@+id/title_layout"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/baby_head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="center"
            android:background="@drawable/head_boy" />
    </LinearLayout>

    <!-- Baby Name -->

    <RelativeLayout
        android:id="@+id/name_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/head_image_view"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/baby_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="@string/baby_name"
            android:textColor="@color/black_txt"
            android:textSize="18sp" />

        <View
            android:id="@+id/devide_0"
            android:layout_width="0.5dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/baby_name" />

        <TextView
            android:id="@+id/nameofbaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/baby_name_rightbtn"
            android:textColor="@color/black_txt"
            android:text="baby"
            android:maxEms="6" 
            android:singleLine="true"
            android:ellipsize="end" 
            android:gravity="right"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/baby_name_rightbtn"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:src="@drawable/ico_enter" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gap_1"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/name_view"
        android:orientation="vertical" />

    <!-- Baby Gender -->

    <RelativeLayout
        android:id="@+id/gender_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/gap_1"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/baby_gender"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="@string/baby_gender"
            android:textColor="@color/black_txt"
            android:textSize="18sp" />

        <View
            android:id="@+id/devide_1"
            android:layout_width="0.5dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/baby_gender"
            android:visibility="gone" />

        <TextView
            android:id="@+id/genderofbaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/baby_gender_rightbtn"
            android:gravity="right"
            android:textColor="@color/black_txt"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/baby_gender_rightbtn"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:src="@drawable/ico_enter" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gap_2"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/gender_view"
        android:orientation="vertical" />

    <!-- Tracker Number -->

    <RelativeLayout
        android:id="@+id/tracker_num_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/gap_2"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/tracker_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="@string/Tracker_num"
            android:textColor="@color/title_appoint_gray"
            android:textSize="18sp" />

        <View
            android:id="@+id/devide_2"
            android:layout_width="0.5dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tracker_num"
            android:visibility="gone" />

        <TextView
            android:id="@+id/numoftracker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/devide_2"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="@color/title_appoint_gray"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gap_3"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/tracker_num_view"
        android:orientation="vertical" />

    <!-- Baby Birthday -->

    <RelativeLayout
        android:id="@+id/birth_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/gap_3"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/baby_birth"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="@string/baby_birth"
            android:textColor="@color/black_txt"
            android:textSize="18sp" />

        <View
            android:id="@+id/devide_3"
            android:layout_width="0.5dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/baby_birth"
            android:visibility="gone" />

        <TextView
            android:id="@+id/birthofbaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/baby_birth_rightbtn"
            android:ellipsize="end"
            android:maxLength="14"
            android:singleLine="true"
            android:textColor="@color/black_txt"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/baby_birth_rightbtn"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:src="@drawable/ico_enter" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gap_4"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/birth_view"
        android:orientation="vertical" />

    <!-- Baby Height -->

    <RelativeLayout
        android:id="@+id/Height_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/gap_4"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/baby_height"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="@string/baby_height"
            android:textColor="@color/black_txt"
            android:textSize="18sp" />

        <View
            android:id="@+id/devide_4"
            android:layout_width="0.5dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/baby_height" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/heightofbaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/baby_height_rightbtn"
            android:textColor="@color/black_txt"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/baby_height_rightbtn"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:src="@drawable/ico_enter" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gap_5"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/Height_view"
        android:orientation="vertical" />

    <!-- Baby Weight -->

    <RelativeLayout
        android:id="@+id/Weight_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/gap_5"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/baby_weight"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="@string/baby_weight"
            android:textColor="@color/black_txt"
            android:textSize="18sp" />

        <View
            android:id="@+id/devide_5"
            android:layout_width="0.5dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/baby_weight"
            android:visibility="gone" />

        <TextView
            android:id="@+id/weightofbaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/baby_weight_rightbtn"
            android:ellipsize="end"
            android:maxLength="14"
            android:singleLine="true"
            android:textColor="@color/black_txt"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/baby_weight_rightbtn"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:src="@drawable/ico_enter" />
    </RelativeLayout>

</LinearLayout>