<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EBEBEB"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rela_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_back"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="middle"
            android:ems="8"
            android:gravity="center"
            android:singleLine="true"
            android:text="编辑"
            android:textColor="@color/main_color"
            android:textSize="@dimen/class1" />

        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:padding="12dip"
            android:src="@drawable/land_back" />

        <TextView
            android:id="@+id/publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_back"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:padding="10dip"
            android:text="发布"
            android:textColor="@color/main_color"
            android:textSize="@dimen/class3" />

        <ImageView
            android:id="@+id/content_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/content_title"
            android:src="@drawable/content_position"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_round_bold_gray"
        android:layout_below="@+id/rela_top"
        android:orientation="vertical" >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             android:layout_marginTop="40dip"
            android:background="@drawable/bg_round_gray"
            >
            
            <TextView 
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#Fe7700"
                android:text="#能吃水果吗#"
                android:layout_marginTop="20dip"
                />

            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:gravity="top|left"
                android:hint="写点好玩的吧"
                android:lines="15"
                android:paddingTop="10dip"
                android:textColor="#969696"
                android:textSize="@dimen/class3" >

                <requestFocus />
            </EditText>
            
        </LinearLayout>

       

       <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/compile_button_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/compile_button_movie"
                android:padding="10dip"
                android:layout_marginLeft="10dip"
                android:src="@drawable/compile_button_picture" />

            <ImageView
                android:id="@+id/compile_button_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:padding="10dip"
                android:src="@drawable/compile_button_music" />

            <ImageView
                android:id="@+id/compile_button_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/compile_button_music"
                android:padding="10dip"
                android:src="@drawable/compile_button_movie" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_top"
        android:layout_margin="5dp"
         >

        <com.haomee.view.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:background="@drawable/sex_female"
            android:src="@drawable/item_icon"
            app:border_color="@color/light"
            android:layout_marginTop="15dip"
            app:border_width="2dp" />

    </RelativeLayout>

</RelativeLayout>