<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.haomee.liulian"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_item_topicsdetail_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1.0" >

            <com.haomee.view.CircleImageView
                android:id="@+id/iv_item_topicsdetail_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/sex_female"
                android:src="@drawable/item_icon"
                app:border_color="@color/transparent"
                app:border_width="2dip" />

            <ImageView
                android:id="@+id/user_level_icon"
                android:layout_width="28dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/iv_item_topicsdetail_icon"
                android:layout_alignRight="@+id/iv_item_topicsdetail_icon" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_weight="2.1"
            android:layout_marginRight="14dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_item_topicsdetail_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="无法无天 的冬菇"
                    android:textColor="#5f5f5f" />

                <TextView
                    android:id="@+id/tv_item_topicsdetail_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_item_topicsdetail_name"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="22"
                    android:textColor="#5f5f5f" />

                <TextView
                    android:id="@+id/tv_item_topicsdetail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_item_topicsdetail_age"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="(北京 )"
                    android:textColor="#5f5f5f" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_topicsdetail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="好无聊"
                android:ellipsize="end"
                android:lines="2"
                android:lineSpacingExtra="3dp"
                android:textColor="#3e3e3e"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_item_topicsdetail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp"
                android:text="15s前"
                android:textColor="#d1d1c8" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5" >
            <ImageView
                android:id="@+id/iv_item_topicsdetail_chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:src="@drawable/topic_detail_chat" />

            <TextView
                android:id="@+id/tv_item_topicsdetail_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:text="举报" />

            <ImageView
                android:id="@+id/iv_item_topicsdetail_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:background="@drawable/topic_detail_delete"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1" />

</LinearLayout>