<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 说明：采用两个item叠在一起，边框和背景 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <stroke
                android:width="0.1dip"
                android:color="#ffffff" />
            <!-- 主体背景颜色值,采用渐变或纯色 -->
            <solid android:color="#08c3f8" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>