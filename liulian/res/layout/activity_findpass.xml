<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="输入验证码"
            android:textColor="#fe7777"
            android:textSize="@dimen/class1" />

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/land_back" />
    </RelativeLayout>
    
     <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#d5d5d5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/public_import_pressed"
            android:ems="2"
            android:enabled="true"
            android:gravity="center_vertical|center_horizontal"
            android:maxLength="1"
            android:numeric="integer"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/class1" />
        <requestFocus />

        <EditText
            android:id="@+id/et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@drawable/public_import_default"
            android:ems="2"
            android:gravity="center_vertical|center_horizontal"
            android:maxLength="1"
            android:numeric="integer"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/class1" >
        </EditText>

        <EditText
            android:id="@+id/et3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@drawable/public_import_default"
            android:ems="2"
            android:gravity="center_vertical|center_horizontal"
            android:maxLength="1"
            android:numeric="integer"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/class1" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@drawable/public_import_default"
            android:ems="2"
            android:gravity="center_vertical|center_horizontal"
            android:maxLength="1"
            android:numeric="integer"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/class1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dip" >

        <TextView
            android:id="@+id/result_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="重新发送验证码"
            android:textColor="#555555"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_phone_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_yzm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="#acacac"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone_toast"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_submit"
            android:paddingBottom="10dip"
            android:paddingLeft="80dip"
            android:paddingRight="80dip"
            android:paddingTop="10dip"
            android:text="确认"
            android:textColor="#acacac"
            android:textSize="@dimen/class2" />
    </RelativeLayout>

</LinearLayout>