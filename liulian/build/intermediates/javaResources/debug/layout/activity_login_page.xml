<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/notloggedin_icon" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/notloggedin_icon_1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/notloggedin_icon_2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <Button
            android:id="@+id/bt_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button1"
            android:layout_toLeftOf="@+id/button1"
            android:background="@drawable/border_submit_new"
            android:paddingBottom="10dip"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:paddingTop="10dip"
            android:text="注册"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button1"
            android:layout_toRightOf="@+id/button1"
            android:background="@drawable/border_submit_new"
            android:paddingBottom="10dip"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:paddingTop="10dip"
            android:text="登录"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="50dp"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dip"
                android:layout_height="0.5dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#FE7777" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:text="或使用以下方式登录"
                android:textColor="#FE7777"
                android:textSize="10sp" />

            <View
                android:layout_width="0dip"
                android:layout_height="0.5dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#FE7777" />
        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="20dip"
            android:layout_height="50dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Button"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/notloggedin_button_q"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/notloggedin_button_x"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bt_f"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/bt_f"
            android:background="@drawable/notloggedin_button_q"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView1"
            android:layout_marginBottom="20dp"
            android:visibility="invisible"
            android:src="@drawable/notloggedin_button_look" />
    </RelativeLayout>

</LinearLayout>