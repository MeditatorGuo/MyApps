<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chest_background" >


    <ImageView
        android:id="@+id/iv_chest_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:background="@drawable/chest_text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_chest_text"
        android:layout_below="@+id/iv_chest_text"
        android:layout_marginTop="60dip"
         >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共有"
             android:textSize="16sp"
            android:textColor="#FE7777" />

        <TextView
            android:id="@+id/chest_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dip"
            android:text="0"
            android:textColor="#FE7777"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="徽章"
             android:textSize="16sp"
            android:textColor="#FE7777" />
    </LinearLayout>

</RelativeLayout>