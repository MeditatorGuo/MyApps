<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/layout_player_bts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginTop="100dp"
            android:visibility="gone" >
	
            <ImageView
                android:id="@+id/bt_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_toRightOf="@+id/bt_play"
            	android:layout_marginLeft="-6dp"
                android:src="@drawable/music_float_next" />
            
            
            <com.haomee.view.RoundProgressBar
                android:id="@+id/bt_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:roundColor="#ffffff"
                app:roundProgressColor="#FCC555"
                app:roundWidth="3dp"
                android:src="@drawable/music_float_play" />
            
        </RelativeLayout>
        
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#d5d5d5" />

    <LinearLayout
        android:id="@+id/layout_menus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>