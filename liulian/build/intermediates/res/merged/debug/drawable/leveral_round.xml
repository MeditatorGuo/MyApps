<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 说明：采用两个item叠在一起，边框和背景 -->
    <item android:id="@android:id/background">

        <!-- 最下层背景,这里采用自定义形状 -->
        <shape>
            <solid android:color="#55ffffff" />
            <!--
                 <gradient
                android:angle="270"
                android:centerColor="@color/proccess_background_1"
                android:centerY="0.45"
                android:endColor="@color/proccess_background_1"
                android:startColor="@color/proccess_background_1" />
            -->
            <corners android:radius="360dip" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="180dp" />

                <gradient
                    android:angle="0"
                    android:centerColor="#fd8080"
                    android:centerY="2.0"
                    android:endColor="#f63232"
                    android:startColor="#fdac80" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/proccess_yellow" />
                <!--
                 <gradient
                android:angle="270"
                android:centerColor="@color/proccess_yellow"
                android:centerY="0.45"
                android:endColor="@color/proccess_yellow"
                android:startColor="@color/proccess_yellow" />
                -->
                <corners android:radius="0dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="#fd8080"
                    android:centerY="2.0"
                    android:endColor="#f63232"
                    android:startColor="#fdac80" />
                <corners android:radius="360dip" />
            </shape>
        </clip>
    </item>

