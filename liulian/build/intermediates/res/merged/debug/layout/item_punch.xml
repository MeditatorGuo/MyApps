<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_round_white" >

    <com.haomee.view.CircleImageView
        android:id="@+id/item_image"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_centerVertical="true"
        android:layout_margin="10dip"
        android:background="@drawable/sex_female"
        android:src="@drawable/item_icon"
        app:border_color="@color/transparent"
        app:border_width="3dp" />

    <ImageView
        android:id="@+id/user_level"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/item_image"
        android:layout_alignRight="@+id/item_image"
         />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#d5d5d5" />

    <RelativeLayout
        android:id="@+id/ll_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-2dp"
        android:layout_toLeftOf="@+id/item_hi"
        android:layout_toRightOf="@+id/item_image"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#FE7777"
            android:textSize="@dimen/class2" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_item_content"
        android:layout_below="@+id/ll_item_content"
        android:layout_toLeftOf="@+id/item_hi"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=" "
        android:textColor="#c4c4c4"
        android:textSize="@dimen/class3" />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_desc"
        android:layout_alignRight="@+id/item_desc"
        android:layout_below="@+id/item_desc"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=" "
        android:textColor="#c4c4c4"
        android:textSize="@dimen/class4" />

    <ImageView
        android:id="@+id/item_hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="10dp"
        android:src="@drawable/hi_button_default" />

</RelativeLayout><!-- From: file:/Users/idea/Documents/资料/泰元项目/liulian/res/layout/item_punch.xml -->