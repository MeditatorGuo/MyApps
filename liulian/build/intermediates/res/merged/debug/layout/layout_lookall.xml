<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.haomee.liulian"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:layout_marginBottom="10dp"
    >

    <RelativeLayout
        android:id="@+id/rl_lookall_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

                 
        <com.haomee.view.RoundCornerImageView
            android:id="@+id/iv_lookall_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/item_default"
            android:layout_marginBottom="-5dp"
            android:layout_above="@id/ll_item_filter_name"
            app:radius="5dp" />
        
        
         <LinearLayout
            android:id="@+id/ll_item_filter_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/roundcorner_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:text="历史重合度"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_lookall_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="56%"
                    android:textColor="#ffffff"
                    android:textSize="34sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="今日合拍度"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_lookall_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="56%"
                    android:textColor="#ffffff"
                    android:textSize="34sp" />
            </LinearLayout>
        </LinearLayout>
        
        
         
         <LinearLayout
            android:id="@+id/ll_item_filter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_item_filter_bottom"
            android:layout_marginBottom="0dp"
            android:background="#FFB812"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/tv_lookall_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text=""
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_lookall_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:layout_marginBottom="3dp"
                android:textSize="16sp" />
        </LinearLayout>
         
         
         


       

        
        
        
        
        
        
        
        
        
        
        
        
    </RelativeLayout>

    
    
    
    
    <RelativeLayout
        android:id="@+id/rl_lookall_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_lookall_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/loading_icon_wind_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_loading"
            android:layout_centerHorizontal="true"
            android:text=""
            android:visibility="invisible"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/idea/Documents/资料/泰元项目/liulian/res/layout/layout_lookall.xml -->