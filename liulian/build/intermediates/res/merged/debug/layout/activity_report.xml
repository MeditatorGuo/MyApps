<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="举报"
            android:textColor="@color/main_color"
            android:textSize="@dimen/class1" />

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:paddingBottom="12dp"
            android:paddingLeft="17dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:src="@drawable/land_back" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#d5d5d5" />

    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/report_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text=""
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/class2" />

            <TextView
                android:id="@+id/report_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dip"
                android:background="@drawable/bg_report_topic"
                android:text=""
                 android:maxLines="3"
                android:ellipsize="end"
                android:singleLine="false"
                android:textSize="@dimen/class2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="8dip"
                android:orientation="vertical" >

                <GridView
                    android:id="@+id/report_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="10dip"
                    android:listSelector="@color/transparent"
                    android:numColumns="2"
                    android:verticalSpacing="8dip" >
                </GridView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/report_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_report_content"
                    android:ellipsize="end"
                    android:gravity="left|top"
                    android:hint="请详细填写，以确保举报能够被处理"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:maxLines="8"
                    android:minLines="6"
                    android:singleLine="false"
                    android:textColorHint="#999999"
                    android:textSize="14sp"
                    android:visibility="gone" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/report_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_round_maincolor"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/idea/Documents/资料/泰元项目/liulian/res/layout/activity_report.xml -->