<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e45449"
            android:clickable="false"
            android:gravity="center"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#92a9c9"
            android:clickable="false"
            android:gravity="center"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/current_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:padding="10dp"
        android:text="1/10"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/text_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我喜欢出去玩"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我喜欢宅在家里"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/left_number"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/number_kuang"
                android:gravity="center"
                android:text="1206"
                android:textSize="25sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/right_number"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/number_kuang"
                android:gravity="center"
                android:text="1206"
                android:textSize="25sp"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:orientation="horizontal" >
				<View 
				    android:id="@+id/left_view_equal"
				    android:layout_width="15dp"
				    android:layout_height="0.5dp"
				    android:visibility="gone"/>
                <View
                    android:id="@+id/left_view"
                    android:layout_width="35dp"
                    android:layout_height="0.5dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/left_person_number"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/number_kuang"
                    android:gravity="center"
                    android:text="1206"
                    android:textSize="25sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/left_small"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="4"
                    android:visibility="gone" />

                <View
                    android:id="@+id/left_equal"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="3"
                    android:visibility="gone" />

                <View
                    android:id="@+id/left_big"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="2"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:visibility="visible" >

                <View
                    android:id="@+id/right_small"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="4"
                    android:visibility="gone" />

                <View
                    android:id="@+id/right_equal"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="3"
                    android:visibility="gone" />

                <View
                    android:id="@+id/right_big"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/right_person_number"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="right"
                    android:background="@drawable/number_kuang"
                    android:gravity="center"
                    android:text="1206"
                    android:textSize="25sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/right_view"
                    android:layout_width="35dp"
                    android:layout_height="0.5dp"
                    android:visibility="gone" />
                <View 
                    android:id="@+id/right_equal_view"
				    android:layout_width="15dp"
				    android:layout_height="0.5dp"
				    android:visibility="gone"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</FrameLayout><!-- From: file:/Users/idea/Documents/资料/泰元项目/liulian/res/layout/activity_user_text.xml -->