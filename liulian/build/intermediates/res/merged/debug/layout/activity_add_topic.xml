<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.haomee.liulian"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/land_back"
            android:drawablePadding="6dp"
            android:padding="12dp"
            android:textColor="#fe7777" />

        <TextView
            android:id="@+id/bt_comit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="@string/topic_comit"
            android:textColor="#fe7777" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#d5d5d5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/topic_add_tip"
        android:textColor="#fe7777" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/iv_kuang" >

        <com.haomee.view.RoundCornerImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="140dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:bg_color="#54d5db"
             />
		<!-- 
		
		 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_kuang" />
		
        <TextView
            android:id="@+id/imag_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/deitText_title"
            android:drawableTop="@drawable/topic_button_add"
            android:gravity="center_horizontal"
            android:text="@string/topic_change_img"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/deitText_title"
            android:layout_width="200dip"
            android:layout_height="92dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:background="@drawable/et_kuang"
            android:hint="@string/topic_add_new"
            android:maxLength="24"
            android:paddingLeft="5dip"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="@dimen/class3" >
        </EditText>
        <TextView 
            android:id="@+id/tv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@+id/deitText_title"
            android:layout_alignRight="@+id/deitText_title"
            android:textSize="12sp"
            android:text="(还能输入24个字)"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="8dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/topic_tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topic_exist_tip"
            android:textColor="@color/main_color"
            android:textSize="@dimen/class4" />

        <TextView
            android:id="@+id/topic_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/topic_tip1"
            android:text="@string/topic_chang_tip"
            android:textColor="@color/main_color"
            android:textSize="@dimen/class4" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/topic_notify"
        android:textColor="#fe7777" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/topic_hint" />

        <TextView
            android:id="@+id/tv_messag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="8dip"
            android:paddingTop="25dip"
            android:text="@string/topic_notify_meg1"
            android:textColor="#ffffff" />

        
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/idea/Documents/资料/泰元项目/liulian/res/layout/activity_add_topic.xml -->