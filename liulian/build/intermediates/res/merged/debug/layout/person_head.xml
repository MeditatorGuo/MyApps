<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="4dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.haomee.view.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@drawable/sex_female"
            android:src="@drawable/item_icon"
            app:border_color="@color/transparent"
            app:border_width="4dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_u_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=" "
                android:textColor="#FE7777"
                android:textSize="@dimen/class1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/image_icon_subject" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="10dip"
                    android:text="内容："
                    android:textColor="#acacac"
                    android:textSize="@dimen/class3" />

                <TextView
                    android:id="@+id/tv_content_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="5dip"
                    android:text=""
                    android:textColor="#acacac"
                    android:textSize="@dimen/class3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/image_icon_time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="10dip"
                    android:text="入驻："
                    android:textColor="#acacac"
                    android:textSize="@dimen/class3" />

                <TextView
                    android:id="@+id/tv_topic_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="5dip"
                    android:text=""
                    android:textColor="#acacac"
                    android:textSize="@dimen/class3" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/image_icon_position" />

                <TextView
                    android:id="@+id/timer_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_round_half_maincolor"
                    android:text=" "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/class3" />

                <TextView
                    android:id="@+id/tv_join_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/ImageView02"
                    android:text=" "
                    android:textColor="#acacac"
                    android:textSize="@dimen/class3" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:background="@drawable/person_asd"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="25dip"
                android:src="@drawable/image_button_question" />

            <TextView
                android:id="@+id/tv_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="5dip"
                android:text="问答"
                android:textColor="#ffffff"
                android:textSize="@dimen/class2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/person_chest"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_chest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="25dip"
                android:src="@drawable/image_button_chest" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="5dip"
                android:text="宝箱"
                android:textColor="#ffffff"
                android:textSize="@dimen/class2" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/content_sended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_tab_left_selected"
            android:text="发过内容"
            android:textColor="#ffffff"
            android:textSize="@dimen/class2" />

        <TextView
            android:id="@+id/topic_chatted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_tab_right"
            android:text="聊过话题"
            android:textColor="#dbdbdb"
            android:textSize="@dimen/class2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/image_triangle" />

</LinearLayout><!-- From: file:/Users/idea/Documents/资料/泰元项目/liulian/res/layout/person_head.xml -->