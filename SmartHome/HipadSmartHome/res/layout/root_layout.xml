<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/navibar"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <ImageButton
        android:id="@+id/leftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ico_titlebar_back" />
    
    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" 
        android:text="@string/titlebar_text"
        android:textColor="@color/title_gray"
        android:gravity="bottom"
        android:maxEms="8" 
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="19.5dp"
        />

    <ImageView
        android:id="@+id/titleSign"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_above="@+id/titleTxt"
        android:layout_marginBottom="-15dip"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/titleTxt"
        android:src="@null" />

    <ImageButton
        android:id="@+id/rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ico_titlebar_add"
        android:visibility="invisible" />
  

</RelativeLayout>