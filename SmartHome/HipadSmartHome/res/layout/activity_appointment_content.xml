<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/navibar"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/title_left_icon"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.5dp"
                android:scaleType="center"
                android:src="@drawable/ico_titlebar_back" />

            <TextView
                android:id="@+id/title_center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/appointment_set_title"
                android:textColor="@color/white"
                android:textSize="19.5dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/boil_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/title_layout"
        android:background="@drawable/bg_item_720_150" >

        <TextView
            android:layout_width="288.5dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="@string/appointment_content_boil"
            android:textColor="@color/title_appoint_gray"
            android:textSize="19.5sp" />

        <ImageView
            android:id="@+id/appoint_boil_rightbtn"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:src="@drawable/ico_enter" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gap_1"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/boil_view"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/boil_warm_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/gap_1"
        android:background="@drawable/bg_item_720_150" >

        <TextView
            android:layout_width="288.5dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="@string/appointment_content_boil_warm"
            android:textColor="@color/title_appoint_gray"
            android:textSize="19.5sp" />

        <ImageView
            android:id="@+id/appoint_boil_warm_rightbtn"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:src="@drawable/ico_enter" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gap_2"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/boil_warm_view"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/scene_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/gap_2"
        android:background="@drawable/bg_item_720_150" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="@string/appointment_content_scene"
            android:textColor="@color/title_appoint_gray"
            android:textSize="19.5sp" />

        <ImageView
            android:id="@+id/appoint_scene_rightbtn"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:src="@drawable/ico_enter" />
    </RelativeLayout>

</RelativeLayout>