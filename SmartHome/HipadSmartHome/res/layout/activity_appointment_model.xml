<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/navibar"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/title_left_icon"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.5dp"
                android:scaleType="center"
                android:src="@drawable/ico_titlebar_back" />

            <Button
                android:id="@+id/appoint_more_icon"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:alpha="0.5"
                android:scaleType="center"
                android:text="@string/appointment_confirm"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/appointment_set_title"
                android:textColor="@color/white"
                android:textSize="19.5dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/everyday_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/title_layout"
        android:background="@drawable/bg_item_720_150" >

        <TextView
            android:layout_width="288.5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="每天"
            android:textColor="@color/title_appoint_gray"
            android:textSize="19.5sp" />

        <ImageView
            android:id="@+id/everyday"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:background="@drawable/rbtn_nor" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gap_1"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/everyday_view"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/single_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/gap_1"
        android:background="@drawable/bg_item_720_150" >

        <TextView
            android:layout_width="288.5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:text="单次"
            android:textColor="@color/title_appoint_gray"
            android:textSize="19.5sp" />

        <ImageView
            android:id="@+id/single"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:background="@drawable/rbtn_nor" />
    </RelativeLayout>

</RelativeLayout>