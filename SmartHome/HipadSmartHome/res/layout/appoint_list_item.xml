<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="@drawable/bg_item_720_150"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/event_name"
            android:layout_width="134dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:ellipsize="end"
            android:maxLength="14"
            android:singleLine="true"
            android:textColor="@color/title_appoint_gray"
            android:textSize="19.5dp" />

        <View
            android:id="@+id/devide_1"
            android:layout_width="0.5dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/event_name"
            android:background="@drawable/v_gray_line_1_80" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="73dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/devide_1"
            android:gravity="center_horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:textColor="@color/title_appoint_gray"
            android:textSize="19.5sp" />

        <TextView
            android:id="@+id/event_time_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_appoint_gray"
            android:textSize="13sp"
            android:visibility="gone" />

        <View
            android:id="@+id/devide_2"
            android:layout_width="0.5dip"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/event_time"
            android:background="@drawable/v_gray_line_1_80" />

        <TextView
            android:id="@+id/event_status"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/devide_2"
            android:textColor="@color/title_appoint_gray"
            android:textSize="13dp" />

        <ImageButton
            android:id="@+id/event_switchBtn"
            android:layout_width="41dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:background="@drawable/switch_on_blue_bg" />

        <ImageButton
            android:id="@+id/event_delBtn"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.5dp"
            android:background="@drawable/delete"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp" />

</LinearLayout>